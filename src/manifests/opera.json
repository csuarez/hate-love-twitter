{
    "manifest_version": 2,

    "name": "Hate Love: a Twitter like blocker",
    "description": "This extension hides the likes of users you follow from your Twitter timeline",
    "version": "0.4",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://twitter.com/*",
                "*://www.twitter.com/*"
            ],
            "css": [
                "styles.css"
            ],
             "js": [
                "hate-love.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "https://ajax.googleapis.com/"
    ]
}